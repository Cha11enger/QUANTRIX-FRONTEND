meta {
  name: Version Validation
  type: http
  seq: 5
}

get {
  url: {{baseUrl}}/api/v1/api/version/validate?version=v1
  body: none
  auth: none
}

headers {
  Content-Type: application/json
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response should validate version", function() {
    expect(res.getBody().data).to.have.property('valid');
    expect(res.getBody().data).to.have.property('version');
    expect(res.getBody().data.valid).to.be.true;
  });
}
